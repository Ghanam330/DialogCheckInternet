<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Activity.AboutCourseActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headers"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="98dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="175dp"
            android:fontFamily="@font/rubik_medium"
            android:text="Android"
            android:textColor="#3C3A36"
            android:textSize="24sp"
            android:translationY="1.7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="375dp"
        android:layout_height="257dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headers"
        app:srcCompat="@drawable/splach1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/title"
            android:layout_width="347dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="top"
            android:lineSpacingExtra="4sp"
            android:text="About the course"
            android:textColor="#3C3A36"
            android:textSize="24sp"
            android:translationY="-1.78sp" />

        <TextView
            android:id="@+id/body_text"
            android:layout_width="347dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/rubik_light"
            android:gravity="top"
            android:lineSpacingExtra="4sp"
            android:text="@string/describtion"
            android:textAppearance="@style/body_text"
            android:textColor="#3C3A36"
            android:textSize="14sp"
            android:translationY="-2.21sp" />

        <TextView
            android:layout_width="347dp"
            android:layout_height="26dp"
            android:layout_below="@+id/body_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="top"
            android:lineSpacingExtra="4sp"
            android:text="Duration"
            android:textColor="#3C3A36"
            android:textSize="20sp"
            android:translationY="-1.15sp" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="347dp"
            android:layout_height="21dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/rubik_light"
            android:text="1 h 30 min"
            android:textColor="#3C3A36"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_goto_course"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_time"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="-70dp"
            android:backgroundTint="#E3562A"
            android:text="Go To Course"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />
        <!-- Body Text -->

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>